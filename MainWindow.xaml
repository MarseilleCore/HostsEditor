<Window x:Class="HostsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор hosts" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Список hosts -->
        <ListBox x:Name="listBoxHosts" Grid.Row="0" Margin="0,0,0,10"
         FontFamily="Consolas" FontSize="14"
         SelectionMode="Extended" />


        <!-- Поля ввода IP и домена -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="textBoxIP" Width="150" Margin="0,0,10,0" Text="IP адрес"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="textBoxDomain" Width="200" Margin="0,0,10,0" Text="Домен"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button x:Name="buttonAdd" Content="Добавить" Width="80" Click="ButtonAdd_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0" Margin="0,0,5,0"/>
            <Button x:Name="buttonRemove" Content="Удалить" Width="80" Click="ButtonRemove_Click"
                    Background="#E81123" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Кнопки Сохранить и Обновить -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="buttonSave" Content="Сохранить" Width="100" Margin="0,0,10,0"
                    Click="ButtonSave_Click" Background="#107C10" Foreground="White" BorderThickness="0"/>
            <Button x:Name="buttonReload" Content="Обновить" Width="100"
                    Click="ButtonReload_Click" Background="#605E5C" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
